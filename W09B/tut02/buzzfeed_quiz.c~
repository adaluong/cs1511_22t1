// COMP1511 Tut02 - variables, if statements, program flow
// Program to decide what kind of pasta you are
// Ada Luong, June 2021

#include <stdio.h>

#define LORD_OF_THE_RINGS   1
#define DIRTY_DANCING       2
#define INCEPTION           3 
    
int main (void) {

    printf("WHAT KIND OF PASTA ARE YOU?????\n");

    /* SETTING UP "TYPES OF PASTA" VARIABLES 
     * -------------------------------------
     * declaring a variable (integer)
     * assigning a value to the variable
     *
     */
     
     int good_pasta_counter = 0;
     int bad_pasta_counter = 0;
   

    /* QUESTION ONE: ENTER A NUMBER
     * -------------------------------------     
     * scanning from the terminal
     * printing to the terminal
     * if statement conditions
     * -> using == instead of =
     * -> operators for comparison >, <, >=, <=, !
     * when do if statements run?
     *
     */ 
     
     int number_of_slices;
     printf("How many slices of pizza would you like\n");
     scanf("%d", &number_of_slices);
     printf("You want %d slices of pizza????\n", number_of_slices);
     
     
     if (number_of_slices == 42) {
        good_pasta_counter += 42;
     }
     
     if (number_of_slices < 6 && number_of_slices >= 3) {
        good_pasta_counter += 10;
     }
     
     if (number_of_slices >= 10) {
        printf("obesity :(\n");
        bad_pasta_counter += 4;
     }
     
     if (number_of_slices < 0) {
        printf("Invalid input\n");
     }

     if (number_of_slices < 1) {
        printf("You don't like pizzas?\n");
        bad_pasta_counter += 10;
     }
     
     if (number_of_slices == 7) {
        printf("lucky number\n");
        good_pasta_counter += 10;
     }



    /* QUESTION TWO: THREE CHOICES
     * -------------------------------------
     * program flow: else if vs another if
     * constants and #defines
     *
     */
    
    printf("\nWhich movie out of these three would you most want to watch now?\n");
    printf("OPTION 1: Lord of the rings\n");
    printf("OPTION 2: Dirty Dancing\n");
    printf("OPTION 3: Inception\n");
    
    int movie_option;
    scanf("%d", movie_option);
  
    
    if (movie_option == LORD_OF_THE_RINGS) {
        good_pasta_counter += 1;    
    }  else if (movie_option == DIRTY_DANCING) {
        good_pasta_counter += 4;
    } else if (movie_option == INCEPTION) {
        bad_pasta_counter += 30;
    }



    /* DECIDING WHAT PASTA YOU ARE */
    if (good_pasta_counter > bad_pasta_counter) {
        printf("you are GOOD pasta!!!\n");
    } else {
        printf("you are bad pasta uwu\n");
    }


    return 0;
}
